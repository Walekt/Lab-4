<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Fourth.HelloController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">

    <TextField fx:id="number1Field" promptText="Введите первое число"/>
    <TextField fx:id="number2Field" promptText="Введите второе число"/>

    <Button text="Сложить" onAction="#add"/>
    <Button text="Вычесть" onAction="#subtract"/>
    <Button text="Умножить" onAction="#multiply"/>
    <Button text="Разделить" onAction="#divide"/>

    <Label fx:id="resultLabel" text="Результат будет здесь" style="-fx-font-size: 16px;"/>

</VBox>