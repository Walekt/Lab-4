<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Fifth.FlagController" spacing="10" alignment="CENTER">

    <Label text="Выберите цвета для полос флага:" style="-fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="5">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100"/>
        </columnConstraints>

        <Label GridPane.columnIndex="0"/>
        <Label GridPane.columnIndex="1"/>
        <Label GridPane.columnIndex="2"/>

        <VBox spacing="5" GridPane.columnIndex="0">
            <RadioButton fx:id="red1" text="Красный"/>
            <RadioButton fx:id="green1" text="Зеленый"/>
            <RadioButton fx:id="blue1" text="Синий"/>
            <RadioButton fx:id="white1" text="Белый"/>
            <RadioButton fx:id="black1" text="Черный"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1">
            <RadioButton fx:id="red2" text="Красный"/>
            <RadioButton fx:id="green2" text="Зеленый"/>
            <RadioButton fx:id="blue2" text="Синий"/>
            <RadioButton fx:id="white2" text="Белый"/>
            <RadioButton fx:id="black2" text="Черный"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="2">
            <RadioButton fx:id="red3" text="Красный"/>
            <RadioButton fx:id="green3" text="Зеленый"/>
            <RadioButton fx:id="blue3" text="Синий"/>
            <RadioButton fx:id="white3" text="Белый"/>
            <RadioButton fx:id="black3" text="Черный"/>
        </VBox>
    </GridPane>

    <Button text="Нарисовать" onAction="#drawFlag" defaultButton="true"/>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</VBox>